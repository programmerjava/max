<!DOCTYPE hibernate-configuration PUBLIC 
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost/tenders</property>   
    <property name="connection.username">root</property>
    <property name="connection.password">1234</property>
    <property name="connection.pool_size">10</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
    <property name="hibernate.connection.autocommit">false</property>
    <property name="current_session_context_class">thread</property>

    <mapping class="tenders.beans.Balance" />
    <mapping class="tenders.beans.BalanceChangeEvent" />
    <mapping class="tenders.beans.Category"/>
    <mapping class="tenders.beans.Comment"/>
    <mapping class="tenders.beans.Invite"/>
    
    <mapping class="tenders.beans.Offer"/>
    <mapping class="tenders.beans.Purchase"/>
    <mapping class="tenders.beans.User"/>
    <mapping class="tenders.beans.Work"/>
    
    
  </session-factory>
  
</hibernate-configuration>